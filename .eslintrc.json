{
	"root": true,
	"extends": [
		"wikimedia/client-es5",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"mediaWiki": false,
		"jQuery": false
	},
	"rules": {
		"no-useless-escape": "warn",
		"no-control-regex": "warn",
		"valid-typeof": "warn",
		"no-useless-concat": "warn",
		"no-unmodified-loop-condition": "warn",
		"no-jquery/no-grep": "warn",
		"no-jquery/no-class-state": "warn",
		"no-jquery/no-global-selector": "warn",
		"no-jquery/no-each-util": "warn",
		"no-jquery/no-map-util": "warn",
		"no-jquery/no-parse-html-literal": "warn",
		"no-jquery/variable-pattern": "warn",
		"block-scoped-var": "warn",
		"unicorn/prefer-string-slice": "warn"
	}
}
